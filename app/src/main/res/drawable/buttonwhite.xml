<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@color/coral" />
            <gradient android:angle="90" android:endColor="@color/coral" android:startColor="@color/coral" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@color/coral" />
            <gradient android:endColor="@color/white" android:startColor="@android:color/white" />
        </shape>
    </item>
</selector>